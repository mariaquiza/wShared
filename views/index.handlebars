<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Carga una Imagen
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST">
         <div class="form-group">
             <div class="input-group">
                 <div class="custom-file">
                     <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                     <label class="custom-file-label" for="inputGroupFile">escoge el archivo</label>
                 </div>
             </div>
         </div>
         <div class="form-group">
             <input type="text" name="title" class="form-control" placeholder="Title for image" required>
         </div>
         <div class="form-group">
            <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripcion para la imagen" required></textarea>
         </div>
         <div class="form group">
             <button class="btn btn-success">
                 <i class="fa fa-upload"></i> image
             </button>

         </div>
        </form>
    </div>


</div>